               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="100朵"
               android:textSize="15sp"
               android:textColor="#000000"
               android:layout_centerInParent="true"/>
           <TextView
               android:id="@+id/tv_money_100"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="￥10"
               android:textColor="#000000"
               android:textSize="15sp"
